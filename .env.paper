TRADING_MODE=paper

# Paper trading 不需要私钥
# PRIVATE_KEY=

# 可以使用较大的测试金额
INITIAL_CAPITAL=1000
MAX_DAILY_VOLUME=1000
MAX_TOTAL_POSITION=5000
